<div class="container books-table">
  <h1>Books</h1>
  <table>
    <thead>
      <tr>
        <th>ID</th>
        <th>Title</th>
        <th>Author</th>
        <th>ISBN</th>
      </tr>
    </thead>
    <tbody>
      <% books.forEach(function(book) { %>
        <tr>
          <td><%= book.book_id %></td>
          <td><%= book.title %></td>
          <td><%= book.author_id %></td>
          <td><%= book.ISBN %></td>
        </tr>
      <% }); %>
    </tbody>
  </table>
  </div>

  <div class="book container-fluid">
    <div id="bookCarousel" class="carousel  justify-content-center" data-ride="carousel">
      <div class="carousel-inner">
        <% for(var i=0; i<books.length; i+=4) { %>
          <div class="carousel-item <%= i==0 ? 'active' : '' %>">
            <div class="row">
              <% for(var j=i; j<i+4 && j<books.length; j++) { %>
                <div class="col-md-3">
                  <img src="<%= books[j].file_path %>" class="d-block w-100" alt="Book Image">
                </div>
              <% } %>
            </div>
          </div>
        <% } %>
      </div>
      <a class="carousel-control-prev" href="#bookCarousel" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
      </a>
      <a class="carousel-control-next" href="#bookCarousel" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
      </a>
    </div>
  </div>
  
  



  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-kenU1KFdBIe4zVF0s0G1M5b4hcpxyD9F7jL+jjXkk+Q2h455rYXK/7HAuoJl+0I4" crossorigin="anonymous"></script>
